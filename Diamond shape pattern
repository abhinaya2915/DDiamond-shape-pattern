size = int(input('Enter length of the pattern: '))

# upper pyramid
for i in range(size):
    for j in range(size,i+1,-1):
        print(' ',end='')

    for k in range(2*(i-1)+1):
        print('*',end='')

    print()

# lower pyramid
for i in range(size-1):
    for j in range(i):
        print(' ',end='')

    for k in range((size-i)*2-3):
        print('*',end='')

    print()
